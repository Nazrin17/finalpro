
@{
    ViewData["Title"] = "Index";
}
@model HomeSearchDto
<!-- Hero Start -->
@if (Model != null)
{

    <div class="container-fluid bg-primary py-5 mb-5 hero-header">
        <div class="container py-5">
            <div class="row justify-content-start">
                <div class="col-lg-8 text-center text-lg-start">
                    <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5" style="border-color: rgba(256, 256, 256, .3) !important;">@Model.getDto.Title</h5>
                    <h1 class="display-1 text-white mb-md-4">@Model.getDto.Slogan</h1>
                    <div class="pt-2">
                        <a asp-action="Index" asp-controller="Search"
                       class="btn btn-light rounded-pill py-md-3 px-md-5 mx-2">Find Doctor</a>
                        <a asp-action="Index" asp-controller="Pricing" class="btn btn-outline-light rounded-pill py-md-3 px-md-5 mx-2">Appointment</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<!-- Hero End -->
<!-- About Start -->
@await Component.InvokeAsync("About");
<!-- About End -->
<!-- Services Start -->
@await Component.InvokeAsync("Service");
<!-- Services End -->
