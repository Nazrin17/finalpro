
@{
    ViewData["Title"] = "Index";
}
@model PaginationDto<MessageGetDto>
<a asp-action="Deleted" asp-controller="Message"><i class="fa-regular fa-trash-can fa-2x"></i></a>
<div class="row">
    @if (Model != null)
    {
        @foreach (var item in Model.Models)
        {
            <div class="card col-md-6 m-2" style="width: 20rem; height: 22rem">
                <div class="card-body">
                    <h4 class="card-title" style=" text-align:center"> @item.UserName</h4>
                    <br>
                    <h5 style=" text-align:center">Subject:</h5>

                    <h5 class="card-text"> @item.Subject</h5>
                    <br>
                    <h5 style=" text-align:center">Letter:</h5>

                    <h5 class="card-text" >@item.Letter</h5>
                    <br>
                    <h5 style=" text-align:center">Email:</h5>

                    <h5 class="card-text">@item.Email</h5>
                    <br>

                    <a asp-action="Delete" asp-controller="Message" asp-route-id="@item.Id" class="btn btn-danger">Delete Message</a>
                </div>
            </div>
        }
    }
</div>
<nav aria-label="...">
    <ul class="pagination">
        <li class="page-item @(Model.Previous?"":"disabled")">
            <a class="page-link" asp-controller="Doctor" asp-action="Index" asp-route-currentpage="@(Model.CurrentPage-1)" tabindex="-1">Previous</a>
        </li>
        @for (int i = 1; i < Model.PageCount + 1; i++)
        {
            <li class="page-item @(i==Model.CurrentPage?"active":"") "><a class="page-link" asp-controller="Doctor" asp-action="Index" asp-route-currentpage="@i">@i</a></li>

        }

        <li class="page-item @(Model.Next?"":"disabled")">
            <a class="page-link" asp-controller="Doctor" asp-action="Index" asp-route-currentpage="@(Model.CurrentPage+1)">Next</a>
        </li>
    </ul>
</nav>


